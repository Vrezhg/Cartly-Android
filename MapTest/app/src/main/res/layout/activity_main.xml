<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"

                tools:context="com.example.jingjie.maptest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:id="@+id/pickup"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp" />

    <Spinner
        android:id="@+id/pickUp_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pickup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/dropOff_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropoff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center_horizontal"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination"
        android:id="@+id/dropoff"
        android:textIsSelectable="false"
        android:layout_below="@+id/pickUp_spinner"
        android:layout_alignLeft="@+id/pickup"
        android:layout_alignStart="@+id/pickup"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goToMap"
        android:id="@+id/button"
        android:gravity="center_vertical"
        android:layout_below="@+id/dropOff_spinner"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="History search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HistorySearchBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"/>

    <Button
        android:text="@string/Sports_Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sportsEventBtn"

        android:layout_above="@+id/HistorySearchBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"/>

    <Button
        android:text="Search by function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchByFunction"
        android:layout_above="@+id/sportsEventBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"/>

</RelativeLayout>